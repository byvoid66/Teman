<script>
let sudahDiputar = false;

function bukaKejutanVoid() {
    if (sudahDiputar) return;
    sudahDiputar = true;
    
    const audio = document.getElementById('audioPrank');
    audio.volume = 1.0;
    
    // Update tombol
    const tombol = document.querySelector('.tombol-utama');
    tombol.innerHTML = '<span>üåÄ MEMUAT KEJUTAN...</span><span>‚ö°</span>';
    tombol.style.background = 'linear-gradient(135deg, #666 0%, #333 100%)';
    tombol.disabled = true;
    
    // Coba putar audio
    const playPromise = audio.play();
    
    if (playPromise !== undefined) {
        playPromise.then(() => {
            // Audio berhasil
            setTimeout(() => {
                tampilkanHasilVoid();
                
                // Jaga volume tetap maksimal
                setInterval(() => {
                    audio.volume = 1.0;
                    if (audio.paused) audio.play();
                }, 1000);
                
            }, 1000);
            
        }).catch(error => {
            // Audio diblok
            document.getElementById('kartuUtama').innerHTML = `
                <div class="content" style="text-align: center; padding: 40px;">
                    <div style="font-size: 50px; color: #ff1493; margin: 20px 0;">üîä</div>
                    <h2 style="color: #ff1493; margin: 20px 0;">VOID ACTIVATION REQUIRED</h2>
                    <div style="background: #fff5f9; padding: 25px; border-radius: 20px; margin: 25px 0; border: 3px solid #ff1493;">
                        <p style="color: #333; margin-bottom: 15px; line-height: 1.6;">
                            Sistem Void membutuhkan akses audio!<br>
                            Klik tombol di bawah untuk mengaktifkan prank:
                        </p>
                        <div style="width: 150px; height: 150px; background: linear-gradient(135deg, #ff1493 0%, #ff69b4 100%); border-radius: 50%; margin: 30px auto; display: flex; align-items: center; justify-content: center; color: white; font-size: 60px; cursor: pointer; box-shadow: 0 20px 50px rgba(255, 20, 147, 0.4); animation: pulse 2s infinite;" onclick="aktifkanPrankLangsung()">
                            ‚ñ∂Ô∏è
                        </div>
                        <p style="color: #ff1493; margin-top: 20px; font-size: 14px; font-weight: bold;">
                            Klik tombol merah muda di atas!
                        </p>
                    </div>
                    <div class="void-signature">üåÄ VOID SYSTEM REQUEST üîÑ</div>
                </div>
            `;
        });
    }
}

function aktifkanPrankLangsung() {
    const audio = document.getElementById('audioPrank');
    audio.volume = 1.0;
    audio.play();
    tampilkanHasilVoid();
}

function tampilkanHasilVoid() {
    // Sembunyikan kartu utama
    document.getElementById('kartuUtama').style.display = 'none';
    
    // Tampilkan kartu hasil
    document.getElementById('kartuHasil').style.display = 'block';
    
    // Ubah judul
    document.title = "üé≠ Void Prank Activated!";
}

// Countdown jika tidak diklik
setTimeout(() => {
    if (!sudahDiputar) {
        const tombol = document.querySelector('.tombol-utama');
        tombol.innerHTML = '<span>‚è≥ VOID TIMEOUT: 10s...</span><span>‚ö†Ô∏è</span>';
        tombol.style.background = 'linear-gradient(135deg, #ff9966 0%, #ff5e62 100%)';
        
        // Auto click setelah 10 detik
        setTimeout(() => {
            if (!sudahDiputar) {
                tombol.click();
            }
        }, 10000);
    }
}, 20000);
</script>

